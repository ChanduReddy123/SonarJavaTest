pipeline{
    agent{
        label "master"
    }
    stages{
        stage("build & SonarQube analysis"){
            steps{
               withSonarQubeEnv(credentialsId: 'sonar') {
                sh 'mvn clean package sonar:sonar'
              }
            }
        }
        stage("Quality gate check"){
            steps{
                timeout(time: 1, unit: 'HOURS') {
                def qg = waitForQualityGate()
                echo qg
              }
            }
        }
    }
    
}