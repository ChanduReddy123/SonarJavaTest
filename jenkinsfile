pipeline{
    agent{
        label "master"
    }
    stages{
        stage("build & SonarQube analysis"){
            steps{
               withSonarQubeEnv('sonar-1') {
                sh 'mvn clean package sonar:sonar'
              }
              script{
                   timeout(time: 1, unit: 'HOURS') {
                   def response = waitForQualityGate()
                   echo response.conditions[0].metric
              }
              }
            }
        }
